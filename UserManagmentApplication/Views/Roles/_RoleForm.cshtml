@model RoleFormViewModel
@{
    ViewData["Title"] = "Add Role";
}
<form method="post" asp-action="Add" asp-controller="Roles">
    <div class="input-group mb-3">
        <input asp-for="Name" type="text" class="form-control" placeholder="Role Name" aria-label="Role Name" aria-describedby="button-addon2" name="Name" />
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit" id="button-addon2">Add New Role</button>
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
</form>
